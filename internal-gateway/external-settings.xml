<!-- Purpose: Barebones settings.xml configuring my local Maven to use           -->
<!--   externally available repos only.                                          -->
<!-- =========================================================================== -->

<settings>

    <pluginGroups>
        <pluginGroup>org.codehaus.mojo</pluginGroup>
        <pluginGroup>com.intuit.spc.whp.plugins</pluginGroup>
    </pluginGroups>

    <profiles>
        <profile>
            <id>DefaultProfile</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>

                <repository>
                    <id>maven.default.repo</id>
                    <name>Maven Default Repo</name>
                    <url>http://repo1.maven.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>daily</updatePolicy>
                        <checksumPolicy>ignore</checksumPolicy>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                    </snapshots>
                </repository>
